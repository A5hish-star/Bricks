@model IEnumerable<Bricks.Models.Unit>
<h1>Unit table</h1>
<table class="table border m-2 col-xl-8 col-lg-7">
    <thead>
        <tr>
            <th>Unit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var items in Model)
        {
            <tr>
                <td>@items.UnitName</td>
                <td><a asp-action="EditUnit" asp-controller="Production" asp-route-id="@items.Id" class="btn btn-warning">Edit</a>
                <a asp-action="DeleteUnit" asp-controller="Production" asp-route-id="@items.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>